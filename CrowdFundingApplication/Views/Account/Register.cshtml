@model CrowdFundingApplication.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ViewStar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LogAndAutho.css" />
    <link rel="stylesheet" href="~/css/site.css.css" />
</head>
<body class="overlay">

    <form method="post" asp-action="Register">
        <section class="vh-100">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container py-5 h-100">
                <div class="row justify-content-center align-items-center h-100">
                    <div class="col-12 col-lg-9 col-xl-7">
                        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                            <div class="card-body p-4 p-md-5">
                                <h3 class="mb-4">Регистрация</h3>
                                <hr />
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class=" d-flex justify-content-start">
                                            <label class="form-label" asp-for="UserName">Имя</label>
                                        </div>
                                        <input type="text" asp-for="UserName" class="form-control form-control-lg" />
                                        <div class="d-flex justify-content-start">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class=" d-flex justify-content-start">
                                            <label class="form-label" asp-for="PhoneNumber">Номер телефона</label>
                                        </div>
                                        <input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <div class=" d-flex justify-content-start">
                                        <label class="form-label" asp-for="Email">Логин</label>
                                    </div>
                                    <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class=" d-flex justify-content-start">
                                            <label class="form-label" asp-for="Password">Пароль</label>
                                        </div>
                                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class=" d-flex justify-content-start">
                                            <label class="form-label" asp-for="ConfirmPassword">Подтвердите пароль</label>
                                        </div>
                                        <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-start mb-4">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           value=""
                                           id="form1Example3" />
                                    <label class="form-check-label" for="form1Example3"> Я даю своё согласие на обработку персональных данных </label>
                                </div>

                                <button class="btn btn-primary btn-lg btn-block" type="submit">Зарегистрироваться</button>
                                <hr />
                                <div class="small text-center">
                                    <label class="label-text">Уже были у нас? <a asp-area="" asp-controller="Account" asp-action="Login">Войти!</a></label>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 