@model CrowdFundingApplication.Models.InputViewModel

@{
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ViewStar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LogAndAutho.css" />
    <link rel="stylesheet" href="~/css/site.css.css" />
</head>
<body class="overlay">

    <form method="post" asp-action="Login">
        <section class="vh-100">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card shadow-2-strong" style="border-radius: 1rem;">

                            <div class="card-body p-5 text-center">
                                <h3 class="mb-4">Вход</h3>
                                <hr />

                                <div class="form-outline mb-4">
                                    <div class=" d-flex justify-content-start">
                                        <label class="form-label" asp-for="Name">Логин</label>
                                    </div>
                                    <input type="text" asp-for="Name" class="form-control form-control-lg" />
                                    <div class="d-flex justify-content-start">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <div class="d-flex justify-content-start">
                                        <label class="form-label" asp-for="Password">Пароль</label>
                                    </div>
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                    <div class="d-flex justify-content-start">
                                        <span asp-validation-for="Password" class="text-danger justify-content-start"></span>
                                    </div>
                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-start mb-4">
                                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                                    <label class="form-check-label" asp-for="RememberMe"> Запомнить меня </label>
                                </div>

                                <button class="btn btn-primary btn-lg btn-block" type="submit">Войти</button>

                                <div class="small">
                                    <hr />
                                    <label class="label-text">Первый раз тут? <a asp-area="" asp-controller="Account" asp-action="Register">Зарегистрируйтесь!</a></label>
                                    <label class="label-text"><a asp-area="" asp-controller="" asp-action="">Забыли пароль?</a></label>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 