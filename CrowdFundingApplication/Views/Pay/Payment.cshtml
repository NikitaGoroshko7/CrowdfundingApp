@model CrowdFundingApplication.Models.PayViewModel

@{
    Layout = "_CreditCard";
}

<form method="post" action="Payment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="box">

            <div class="mdl">
                <div class="circles">
                    <div class="circle circle-1"></div>
                    <div class="circle circle-2"></div>
                </div>

                <label class="l1" >Сумма пополнения: </label>
                <input class="inp1" asp-for="Sum" name="Sum" value="@Model.Sum" readonly/>

                <div class="card">
                    <div class="logo">
                        <?xml version="1.0" encoding="UTF-8" ?>
                        <svg width="48px" height="48px" viewBox="0 0 64 64" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <title>Group</title>
                            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <g id="Group" fill="#FFFFFF">
                                    <circle id="Oval" cx="16" cy="16" r="16"></circle>
                                    <circle id="Oval" cx="16" cy="48" r="16"></circle>
                                    <circle id="Oval" cx="48" cy="16" r="16"></circle>
                                    <circle id="Oval" cx="48" cy="48" r="16"></circle>
                                </g>
                            </g>
                        </svg>
                    </div>

                    <div class="card-number">
                        <label asp-for="NumberOfCreadirCard">Номер карты</label>
                        <input id="card-number" asp-for="NumberOfCreadirCard" placeholder="1111 2222 3333 4444" type="text" required maxlength="19">
                        <span class="underline"></span>

                    </div>
                    <br>

                    <div class="group">
                        <div class="card-name">
                            <label asp-for="CardsName">Владелец карты</label>
                            <input asp-for="CardsName" id="card-name" placeholder="IVAN IVANOV" type="text" required>
                            <span class="underline"></span>

                        </div>
                        <div class="expiration-date">
                            <label asp-for="MonthAndYear">MM/YY</label>
                            <input asp-for="MonthAndYear" id="card-exp" placeholder="12/25" type="text" maxlength="5" required>
                            <span class="underline"></span>

                        </div>
                        <div class="ccv">
                            <label asp-for="CVC">CVC</label>
                            <input asp-for="CVC" id="card-ccv" name="CVC" placeholder="123"  maxlength="3" required>
                            <span class="underline"></span>
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary btn-lg btn-block" type="submit">Оплатить</button>
            </div>
        </div>
    </form>