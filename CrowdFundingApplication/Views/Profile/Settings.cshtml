@model CrowdFundingApplication.Models.EditProfileViewModel

@{
    ViewData["Title"] = "Настройки";
}

<div style="height: 25px;"></div>
<form method="post" asp-action="Settings" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mt-5">
        <div class="row">
            <div class="col">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" style="color: black;" asp-area="" asp-controller="Profile" asp-action="Index">Профиль</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: black;" asp-area="" asp-controller="Profile" asp-action="CreatedProjects">Созданные проекты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: black;" asp-area="" asp-controller="Profile" asp-action="Balance">Управление балансом</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row mt-1">
            <div class="col">
                <div class="card shadow-2-strong card-registration" style="border-radius: 5px;">
                    <div class="card-body p-2 p-md-5">
                        <h3 class="mb-4">Настройки</h3>
                        <hr />

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="Email">Email</label>
                                </div>
                                <input type="text" asp-for="Email" class="form-control form-control-lg" />
                                <div class="d-flex justify-content-start">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="NumberOfPhone">Номер телефона</label>
                                </div>
                                <input type="tel" asp-for="NumberOfPhone" class="form-control form-control-lg" />
                                <div class="d-flex justify-content-start">
                                    <span asp-validation-for="NumberOfPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="mt-0" />
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="Age">Возраст</label>
                                </div>
                                <input type="number" asp-for="Age" class="form-control form-control-lg" />
                                <div class="d-flex justify-content-start">
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="Sex">Пол</label>
                                </div>
                                <div class="input-group" style="height: 45px;">
                                    <select class="form-select w-auto" asp-for="Sex" asp-items="Html.GetEnumSelectList<Sex>()" aria-label="Default select example"></select>
                                </div>
                            </div>
                        </div>

                        <hr class="mt-0" />
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="Country">Страна</label>
                                </div>
                                <input type="text" asp-for="Country" class="form-control form-control-lg" />
                                <div class="d-flex justify-content-start">
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="City">Город</label>
                                </div>
                                <input type="text" asp-for="City" class="form-control form-control-lg" />
                                <div class="d-flex justify-content-start">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="mt-0" />
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="OldPassword">Старый пароль</label>
                                </div>
                                <input type="password" asp-for="OldPassword" class="form-control form-control-lg" />
                                <div class="d-flex justify-content-start">
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4"></div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="NewPassword">Новый пароль</label>
                                </div>
                                <input type="password" asp-for="NewPassword" class="form-control form-control-lg" />
                                <div class="d-flex justify-content-start">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="ConfirmPassword">Подтвердите пароль</label>
                                </div>
                                <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                <div class="d-flex justify-content-start">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-lg-4 text-center">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" for="lastName">Фотография</label>
                                </div>
                                <img id="output" class="rounded-circle" style="width: 150px; height: 160px;">
                                <div class="row mt-1">
                                    <div class="col">
                                        <input type="file" name="Image" asp-for="Image" id="file" onchange="loadFile(event)" style="display: none;" />
                                        <p><label for="file" name="Image" asp-for="Image" style="cursor: pointer;">Изменить</label></p>
                                    </div>
                                    <div class="col">
                                        <p><label for="delete" style="cursor: pointer;" onclick="deleteFile()">Удалить</label></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class=" d-flex justify-content-start">
                                    <label class="form-label" asp-for="Description">О себе</label>
                                </div>
                                <div class="mt-3 form-floating">
                                    <textarea class="form-control" id="sms" name="description" asp-for="Description" style="height: 140px;" placeholder="Расскажите о себе в двух словах!"></textarea>
                                </div>
                                <div class="mt-2" style="color: gray;">
                                    <p style="cursor: pointer">Осталось <label id="result" style="cursor: pointer">100</label> символов</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div>
                    <hr />
                    <div class="row">
                        <div class="col-lg-8">
                            <button class="btn btn btn-primary btn-block" style="text-transform: uppercase;" onclick="message();" type="submit">Сохранить изменения</button>
                            <br />
                        </div>
                        <div class="col-lg-4">
                            <a class="btn btn-danger btn-block" style="color: white" data-toggle="modal" data-target="#exampleModal">Удалить аккаунт</a>
                            <br />
                        </div>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Вы действительно хотите удалить аккаунт?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    Вы уверены, что хотите удалить свой аккаунт? В случае, если вы удалите свой аккаунт, все ваши данные
                                    будут немедленно удалены из базы данных!.
                                </p>
                            </div>
                            <div class="modal-footer">
                                <div class="col">
                                    <button class="btn btn-danger btn-block" asp-area="" asp-controller="Profile" asp-action="DeleteProfile">Да</button>
                                </div>
                                <div class="col">
                                    <button class="btn btn-success btn-block" data-dismiss="modal">Нет</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>