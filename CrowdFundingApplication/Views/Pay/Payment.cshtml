@model CrowdFundingApplication.Models.PayViewModel

@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>ViewStar - Оплата</title>
    <link rel="stylesheet" href="~/css/CreaditCard.css">
</head>
<body>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <form method="post" action="Payment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="box">

            <div class="mdl">
                <div class="circles">
                    <div class="circle circle-1"></div>
                    <div class="circle circle-2"></div>
                </div>

                <h1 class="title" style="margin-left: 75px;">Сумма пополнения: <strong>@ViewBag.Sum</strong> BYN</h1>

                <div class="card">
                    <div class="logo">
                        <?xml version="1.0" encoding="UTF-8" ?>
                        <svg width="48px" height="48px" viewBox="0 0 64 64" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <title>Group</title>
                            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <g id="Group" fill="#FFFFFF">
                                    <circle id="Oval" cx="16" cy="16" r="16"></circle>
                                    <circle id="Oval" cx="16" cy="48" r="16"></circle>
                                    <circle id="Oval" cx="48" cy="16" r="16"></circle>
                                    <circle id="Oval" cx="48" cy="48" r="16"></circle>
                                </g>
                            </g>
                        </svg>
                    </div>

                    <div class="card-number">
                        <label asp-for="NumberOfCreadirCard">Номер карты</label>
                        <input id="card-number" asp-for="NumberOfCreadirCard" placeholder="1111 2222 3333 4444" type="text" required maxlength="19">
                        <span class="underline"></span>

                    </div>
                    <br>

                    <div class="group">
                        <div class="card-name">
                            <label asp-for="CardsName">Владелец карты</label>
                            <input asp-for="CardsName" id="card-name" placeholder="IVAN IVANOV" type="text" required>
                            <span class="underline"></span>

                        </div>
                        <div class="expiration-date">
                            <label asp-for="MonthAndYear">MM/YY</label>
                            <input asp-for="MonthAndYear" id="card-exp" placeholder="12/25" type="text" maxlength="5" required>
                            <span class="underline"></span>

                        </div>
                        <div class="ccv">
                            <label asp-for="CVC">CVC</label>
                            <input asp-for="CVC" id="card-ccv" name="CVC" placeholder="123"  maxlength="3" required>
                            <span class="underline"></span>
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary btn-lg btn-block" type="submit">Оплатить</button>
            </div>
        </div>
    </form>
   
    <script src="~/js/CreaditCard.js"></script>
</body>
</html>